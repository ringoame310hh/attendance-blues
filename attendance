<h1>üìÖ Âá∫Ê¨†Á¢∫Ë™ç</h1>

<button class="add" onclick="addEvent()">Ôºã Êó•Á®ã„ÇíËøΩÂä†</button>

<div id="events"></div>

<script>
  // üî¥ FirebaseË®≠ÂÆöÔºà„ÅÇ„Å®„ÅßÊõ∏„ÅçÊèõ„Åà„ÇãÔºâ
  const firebaseConfig = {
    apiKey: "„Åì„Åì„Å´API_KEY",
    authDomain: "„Åì„Åì„Å´authDomain",
    projectId: "„Åì„Åì„Å´projectId"
  };

  firebase.initializeApp(firebaseConfig);
  const db = firebase.firestore();

  const eventsDiv = document.getElementById("events");

  // „É™„Ç¢„É´„Çø„Ç§„É†ÂèñÂæó
  db.collection("events").orderBy("date")
    .onSnapshot(snapshot => {
      eventsDiv.innerHTML = "";
      snapshot.forEach(doc => {
        const e = doc.data();
        const div = document.createElement("div");
        div.className = "event";
        div.innerHTML = `
          <div class="event-title">${e.date}Ôºö${e.title}</div>
          <button class="yes" onclick="vote('${doc.id}','yes')">ÂèÇÂä†</button>
          <button class="no" onclick="vote('${doc.id}','no')">Ê¨†Â∏≠</button>
          <div class="list">
            ÂèÇÂä†Ôºö${(e.yes || []).join(", ")}<br>
            Ê¨†Â∏≠Ôºö${(e.no || []).join(", ")}
          </div>
        `;
        eventsDiv.appendChild(div);
      });
    });

  function addEvent() {
    const date = prompt("Êó•‰ªòÔºà‰æãÔºö3/10Ôºâ");
    const title = prompt("ÂÜÖÂÆπÔºà‰æãÔºöÁ∑¥ÁøíË©¶ÂêàÔºâ");
    if (!date || !title) return;

    db.collection("events").add({
      date,
      title,
      yes: [],
      no: []
    });
  }

  function vote(id, type) {
    const name = prompt("ÂêçÂâç„ÇíÂÖ•Âäõ");
    if (!name) return;

    const ref = db.collection("events").doc(id);
    ref.get().then(doc => {
      const data = doc.data();
      const yes = new Set(data.yes || []);
      const no = new Set(data.no || []);
      yes.delete(name);
      no.delete(name);
      if (type === "yes") yes.add(name);
      if (type === "no") no.add(name);
      ref.update({
        yes: Array.from(yes),
        no: Array.from(no)
      });
    });
  }
</script>

